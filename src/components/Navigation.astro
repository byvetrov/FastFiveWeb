---
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<div class="nav-links">
    <a href="/partner" class="text">Партнерская программа</a>
    <a href="https://faq.fastfive.ru/guides/example/" target="_blank" class="text">Инструкция использования</a>
    <div class="help">
        <p>Нужна помощь?</p>
        <div class="help-icons">
            <a href="https://t.me/vpnshop_supp"><img src="/images/telegram.png" alt="Logo" class="telegram"/></a>
        </div>
    </div>
</div>

<style>
    .nav-links a,
    .nav-links a:link,
    .nav-links a:visited,
    .nav-links a:hover,
    .nav-links a:active {
        text-decoration: none; /* Убираем подчеркивание */
        color: var(--font-color);
    }

    @import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap');
    .nav-links {
        font-family: "Nunito", sans-serif;
        display: none; /* Меню скрыто по умолчанию */
        position: absolute; /* Выпадающее меню */
        top: 60px;
        left: 0;
        width: 100%;
        color: var(--font-color);
        text-decoration: none;
        gap: 20px;
        padding: 10px 0;
        font-weight: 700;
    }

    /* Меню открывается, только если добавлен класс .expanded */
    .nav-links.expanded {
        display: flex; /* Делаем меню видимым */
    }

    /* Стили для больших экранов */
    @media screen and (min-width: 636px) {
        .nav-links {
            display: flex; /* Показываем меню всегда на больших экранах */
            justify-content: center; /* Центрируем ссылки */
            align-items: center;
            position: static; /* Обычное расположение */
            width: auto;
            background: none; /* Убираем фон */
            flex-direction: row; /* Горизонтальное расположение ссылок */
            font-size: 20px;
            font-weight: 400;
        }

        .nav-links a {
            display: inline-block;
            padding: 15px 20px;
        }
    }

    /* Стили для бургер-меню */
    .hamburger {
        display: block; /* Показываем бургер только на маленьких экранах */
        cursor: pointer;
    }

    @media screen and (max-width: 635px) {
        /* Контейнер меню */
        @import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap');
        .nav-links {
            display: none; /* Меню скрыто по умолчанию */
            position: fixed; /* Фиксируем меню */
            top: 90px; /* Отступ сверху под логотип и бургер */
            left: 0;
            width: 100%;
            height: calc(100% - 60px); /* Учитываем высоту логотипа и бургера */
            background-color: var(--color-primary); /* Белый фон */
            flex-direction: column; /* Вертикальное расположение ссылок */
            align-items: center; /* Центрируем ссылки по горизонтали */
            gap: 20px; /* Расстояние между ссылками */
            padding: 50px 0 20px;
            z-index: 1000; /* Поверх других элементов */
        }

        /* Показываем меню, если добавлен класс .expanded */
        .nav-links.expanded {
            display: flex;
        }

        /* Стили для ссылок в мобильной версии */
        .nav-links a {
            font-size: 18px;
            font-weight: 700;
            color: var(--font-color);
            text-decoration: none;
            width: 80%; /* Ограничиваем ширину ссылок */
            text-align: center;
            padding: 10px 0;

        }

        .nav-links a:last-child {
            border-bottom: none; /* Убираем линию у последней ссылки */
        }

        .help {
            margin: 20px;
            font-weight: 700;
        }

        .telegram {
            width: 35px; /* Ширина 15px */
            height: 35px;
            justify-content: center;
        }

        /* Секция помощи внизу меню */
        .nav-links .help {

            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: auto; /* Размещаем внизу */
            text-align: center;
        }

        .nav-links .help p {
            font-size: 16px;
            font-weight: 800;
            color: var(--font-color); /* Серый цвет текста */
        }

        .nav-links .telegram {
            margin: 5px 0;
            display: flex;
            justify-content: center;
            gap: 10px; /* Расстояние между иконками */
        }

        /* Логотип и бургер */
        .nav-bar {
            display: flex;
            justify-content: space-between; /* Логотип слева, бургер справа */
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px; /* Высота под логотип и бургер */
            background-color: var(--font-color); /* Белый фон */
            z-index: 1001; /* Поверх меню */
            padding: 0 20px; /* Отступы для логотипа и бургера */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Тень */
        }

        .hamburger {
            display: block;
            font-size: 24px;
            cursor: pointer;
        }
    }

    @media screen and (min-width: 636px) {
        .help-icons {
            display: none; /* Скрываем бургер на больших экранах */
        }

        .help {
            display: none;
        }
    }


</style>