---
import '../../styles/global.css';
import Header from "../../components/Header.astro";
---

<html>
  <head>
    <meta charset="utf-8" />
    <Header />
  </head>

  <body>
    <div class="container">
      <!-- Блок ожидания -->
      <div id="loading" class="centered">
        <svg class="spinner" viewBox="0 0 50 50">
          <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle>
        </svg>
        <div class="message">Мы обрабатываем ваш платёж...</div>
      </div>

      <!-- Блок ошибки оплаты -->
      <div id="error" class="error centered">
        <div class="icon error-icon">
          <svg viewBox="0 0 50 50" class="crossmark">
            <line class="cross" x1="15" y1="15" x2="35" y2="35" stroke="white" stroke-width="5" stroke-linecap="round" />
            <line class="cross" x1="35" y1="15" x2="15" y2="35" stroke="white" stroke-width="5" stroke-linecap="round" />
          </svg>
        </div>
        <div class="message">Во время оплаты произошла ошибка. Попробуйте снова.</div>
      </div>
    </div>

    <script>
      // Скрипт для смены состояния
      setTimeout(() => {
        document.getElementById("loading").style.display = "none";
        document.getElementById("error").style.display = "flex";
      }, 3000);
    </script>
  </body>

  <style>
    /* Современный минималистичный стиль */
    body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .container {
        display: flex;
        margin-top: 300px;
        background: var(--color-secondary);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        padding: 40px;
        width: 350px;
        position: relative;
    }

    .centered {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .spinner {
        animation: rotate 1.5s linear infinite;
        width: 50px;
        height: 50px;
        margin-bottom: 20px;
    }

    .path {
        stroke: #4caf50;
        stroke-linecap: round;
        animation: dash 1.5s ease-in-out infinite;
    }

    @keyframes rotate {
      100% {
        transform: rotate(360deg);
      }
    }

    @keyframes dash {
      0% {
        stroke-dasharray: 1, 150;
        stroke-dashoffset: 0;
      }
      50% {
        stroke-dasharray: 90, 150;
        stroke-dashoffset: -35;
      }
      100% {
        stroke-dasharray: 90, 150;
        stroke-dashoffset: -124;
      }
    }

    .icon {
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 50%;
      width: 80px;
      height: 80px;
      margin-bottom: 20px;
    }

    .error-icon {
      background: #f44336;
    }

    .crossmark {
      width: 40px;
      height: 40px;
      animation: fadeIn 0.5s ease forwards;
    }

    .message {
      font-size: 18px;
      text-align: center;
      color: var(--font-color);
    }
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    .error {
      display: none;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  </style>
</html>
